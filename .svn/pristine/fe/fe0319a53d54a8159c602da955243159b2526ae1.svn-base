		fieldDefaults:{
			labelWidth:100,
			labelAlign:'left',
			flex:1,
			margin:'2 5 4 5'
		},
		items:[
		{
			fieldLabel:'物料ID',
			xtype:'textfield',
			hidden:true,
			name:'material_id',
			allowBlank:false,
			maxLength:32,
