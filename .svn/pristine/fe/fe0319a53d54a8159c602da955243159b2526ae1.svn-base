var zxMaterialWinEdit;
var zxMaterialFormEdit;
function updateZxMaterial(){
	var record = grid.getSelectionModel().selected;
	if(record.length == 0){
		msgTishi('请选择要修改的一项！');
		return;
	}
	initZxMaterialFormEdit();
	zxMaterialWinEdit = Ext.create('Ext.Window',{
		layout:'fit',
		width:700,
		height:500,
		maximizable:true,
		minimizable:true,
		animateTarget:document.body,
		plain:true,
		modal:true,
		title:'编辑信息',
		listeners:{
			minimize:function(win,opts){
				if(!win.collapse()){
					win.collapse();
				}else{
					win.expand();
				}
			}
		},
		items:zxMaterialFormEdit,
		buttons:[{
			text:'保存',
			itemId:'save',
			handler:function(button){
				submitForm(zxMaterialFormEdit,'../zxMaterialController/updateZxMaterial',grid,zxMaterialWinEdit,false,true);
			}
		},{
			text:'关闭',
			itemId:'close',
			handler:function(button){
				button.up('window').close();
			}
		}]
	});
	zxMaterialWinEdit.show();
	
	loadFormData(zxMaterialFormEdit,'../zxMaterialController/getZxMaterialById?material_id='+ record.items[0].data.material_id);
}
function initZxMaterialFormEdit(){
