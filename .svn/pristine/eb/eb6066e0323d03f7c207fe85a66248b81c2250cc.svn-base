var xtOperateLogsWinEdit;
var xtOperateLogsFormEdit;
function updateXtOperateLogs(){
	reGetWidthAndHeight();
	var record = grid.getSelectionModel().selected;
	if(record.length == 0){
		msgTishi('请选择要修改的一项！');
		return;
	}
	initXtOperateLogsFormEdit();
	xtOperateLogsWinEdit = Ext.create('Ext.Window',{
		layout:'fit',
		width:clientWidth,                    
		height:clientHeight, 
		maximizable:true,
		minimizable:true,
		animateTarget:document.body,
		plain:true,
		modal:true,
		title:'编辑信息',
		listeners:{
			minimize:function(win,opts){
				if(!win.collapse()){
					win.collapse();
				}else{
					win.expand();
				}
			}
		},
		items:xtOperateLogsFormEdit,
		buttons:[{
			text:'关闭',
			itemId:'close',
			handler:function(button){
				button.up('window').close();
			}
		}]
	});
	xtOperateLogsWinEdit.show();
	loadFormData(xtOperateLogsFormEdit,'../xtOperateLogsController/getXtOperateLogsById?xt_operate_log_id='+ record.items[0].data.xt_operate_log_id);
}
