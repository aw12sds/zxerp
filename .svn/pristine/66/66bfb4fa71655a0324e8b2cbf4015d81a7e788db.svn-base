var bSellerProductWinEdit;
var bSellerProductFormEdit;
function updateBSellerProduct(){
	var record = grid.getSelectionModel().selected;
	if(record.length == 0){
		msgTishi('请选择要修改的一项！');
		return;
	}
	initBSellerProductFormEdit();
	bSellerProductWinEdit = Ext.create('Ext.Window',{
		layout:'fit',
		width:800,
		height:400,
		maximizable:true,
		minimizable:true,
		animateTarget:document.body,
		plain:true,
		modal:true,
		title:'编辑信息',
		headerPosition:'top',
		listeners:{
			minimize:function(win,opts){
				win.collapse();
			}
		},
		items:bSellerProductFormEdit,
		buttons:[{
			text:'保存',
			itemId:'save',
			handler:function(button){
				submitForm(bSellerProductFormEdit,'../bSellerProductController/updateBSellerProduct',grid,bSellerProductWinEdit,false,true);
			}
		},{
			text:'关闭',
			itemId:'close',
			handler:function(button){
				button.up('window').close();
			}
		}]
	});
	bSellerProductWinEdit.show();
	loadFormData(bSellerProductFormEdit,'../bSellerProductController/getBSellerProductById?b_seller_product_id='+ record.items[0].data.b_seller_product_id);
}
