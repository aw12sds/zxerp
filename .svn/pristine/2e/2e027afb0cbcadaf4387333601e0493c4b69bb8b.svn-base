<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jehc.solrmodules.solrmodel.SolrIndex">
	<!--初始化分页-->
	<select id="getSolrIndexListByCondition" resultType="jehc.solrmodules.solrmodel.SolrIndex" parameterType="map">
		SELECT
			`solr_index_id`,
			`solr_index_name`,
			`solr_index_remark`,
			`solr_index_type`,
			`solr_index_indexed`,
			`xt_userinfo_id`,
			`solr_index_stored`,
			`solr_index_multiValued`,
			`solr_core_id`,
			DATE_FORMAT(`solr_index_ctime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_ctime`,
			DATE_FORMAT(`solr_index_mtime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_mtime`
		FROM 
			solr_index
		WHERE 1=1
		<if test="null != solr_core_id">
			AND solr_core_id = #{solr_core_id}
		</if>
	</select>

	<!--查询对象-->
	<select id="getSolrIndexById" resultType="jehc.solrmodules.solrmodel.SolrIndex" parameterType="string">
		SELECT
			`solr_index_id`,
			`solr_index_name`,
			`solr_index_remark`,
			`solr_index_type`,
			`solr_index_indexed`,
			`xt_userinfo_id`,
			`solr_index_stored`,
			`solr_index_multiValued`,
			`solr_core_id`,
			DATE_FORMAT(`solr_index_ctime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_ctime`,
			DATE_FORMAT(`solr_index_mtime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_mtime`
		FROM 
			solr_index
		WHERE solr_index_id=#{solr_index_id}
	</select>

	<!--添加-->
	<insert id="addSolrIndex" parameterType="jehc.solrmodules.solrmodel.SolrIndex">
		INSERT INTO
			solr_index
			(
			`solr_index_id`,
			`solr_index_name`,
			`solr_index_remark`,
			`solr_index_type`,
			`solr_index_indexed`,
			`xt_userinfo_id`,
			`solr_index_stored`,
			`solr_index_multiValued`,
			`solr_core_id`,
			`solr_index_ctime`,
			`solr_index_mtime`
			)
			VALUES
			(
			#{solr_index_id},
			#{solr_index_name},
			#{solr_index_remark},
			#{solr_index_type},
			#{solr_index_indexed},
			#{xt_userinfo_id},
			#{solr_index_stored},
			#{solr_index_multiValued},
			#{solr_core_id},
			#{solr_index_ctime},
			#{solr_index_mtime}
			)
	</insert>

	<!--修改-->
	<update id="updateSolrIndex" parameterType="jehc.solrmodules.solrmodel.SolrIndex">
		UPDATE
			solr_index
		SET
			`solr_index_id` = #{solr_index_id},
			`solr_index_name` = #{solr_index_name},
			`solr_index_remark` = #{solr_index_remark},
			`solr_index_type` = #{solr_index_type},
			`solr_index_indexed` = #{solr_index_indexed},
			`xt_userinfo_id` = #{xt_userinfo_id},
			`solr_index_stored` = #{solr_index_stored},
			`solr_index_multiValued` = #{solr_index_multiValued},
			`solr_core_id` = #{solr_core_id},
			`solr_index_ctime` = #{solr_index_ctime},
			`solr_index_mtime` = #{solr_index_mtime}
		WHERE solr_index_id=#{solr_index_id}
	</update>

	<!--删除-->
	<delete id="delSolrIndex" parameterType="map">
		DELETE FROM solr_index WHERE solr_index_id IN
		<foreach item="item" index="index" collection="solr_index_id" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>