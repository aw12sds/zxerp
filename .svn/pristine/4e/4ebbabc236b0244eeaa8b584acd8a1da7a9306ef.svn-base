var xtOperateBusinessLogsWinAdd;
var xtOperateBusinessLogsFormAdd;
function addXtOperateBusinessLogs(){
	initXtOperateBusinessLogsFormAdd();
	xtOperateBusinessLogsWinAdd = Ext.create('Ext.Window',{
		layout:'fit',
		width:800,
		height:400,
		maximizable:true,
		minimizable:true,
		animateTarget:document.body,
		plain:true,
		modal:true,
		title:'添加信息',
		listeners:{
			minimize:function(win,opts){
				if(!win.collapse()){
					win.collapse();
				}else{
					win.expand();
				}
			}
		},
		items:xtOperateBusinessLogsFormAdd,
		buttons:[{
			text:'保存',
			itemId:'save',
			handler:function(button){
				submitForm(xtOperateBusinessLogsFormAdd,'../xtOperateBusinessLogsController/addXtOperateBusinessLogs',grid,xtOperateBusinessLogsWinAdd,false,true);
			}
		},{
			text:'关闭',
			itemId:'close',
			handler:function(button){
				button.up('window').close();
			}
		}]
	});
	xtOperateBusinessLogsWinAdd.show();
	
}
