        /**新方法使用结束**/
		fieldDefaults:{
			labelWidth:70,
			labelAlign:'left',
			flex:1,
			margin:'2 5 4 5'
		},
		items:[
		{
			fieldLabel:'用户名称',
			xtype:'textfield',
			name:'user_name',
			maxLength:64,
			anchor:'40%'
		},
		{
			fieldLabel:'登录账号',
			xtype:'textfield',
			name:'login_id',
			maxLength:255,
			anchor:'40%'
		},
		{
			fieldLabel:'性&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;别',
			xtype:'combo',
			emptyText:'请选择',
			store:xt_change_pwd_sex_combo,
			mode:'local',
