					`approve_time` = #{item.approve_time},
				</if>
				<if test="item.office_id != null">
					`office_id` = #{item.office_id},
				</if>
				<if test="item.amount != null">
					`amount` = #{item.amount},
				</if>
				<if test="item.reason != null">
					`reason` = #{item.reason},
				</if>
				<if test="item.status != null">
					`status` = #{item.status},
				</if>
			</set>
			WHERE id=#{item.id}
		</foreach>
	</update>
</mapper>