		},
		{
			fieldLabel:'备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注',
			xtype:'textareafield',
			name:'lc_process_remark',
			maxLength:800,
			anchor:'100%'
		}
		]
	});
}
