		items:[
		{
			fieldLabel:'CPUID编号',
			xtype:'textfield',
			hidden:true,
			name:'xt_monitor_cpu_id',
			allowBlank:false,
			maxLength:32,
			anchor:'100%'
		},
		{
			fieldLabel:'CPU的总量MHz',
			xtype:'numberfield',
			value:'0',
			name:'xt_monitor_cpu_totalMHz',
			anchor:'100%'
		},
		{
			fieldLabel:'CPU生产商',
			xtype:'textfield',
			name:'xt_monitor_cpu_producer',
