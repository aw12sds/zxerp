function addZxOfficeApply(){
	initZxBuyApplyFormAdd();
	zxBuyApplyWinAdd = Ext.create('Ext.Window',{
		layout:'fit',
		width:600,
		height:500,
		maximizable:false,
		minimizable:false,
		animateTarget:document.body,
		plain:true,
		modal:true,
		title:'申领信息',
		listeners:{
			minimize:function(win,opts){
				if(!win.collapse()){
					win.collapse();
				}else{
					win.expand();
				}
			}
		},
		items:zxBuyApplyFormAdd,
		buttons:[{
			text:'保存',
			itemId:'save',
			handler:function(button){
				submitForm(zxBuyApplyFormAdd,'../zxOfficeApplyController/addZxOfficeApply',grid,zxBuyApplyWinAdd,false,true);
			}
		},{
			text:'关闭',
			itemId:'close',
			handler:function(button){
				button.up('window').close();
			}
		}]
	});
	zxBuyApplyWinAdd.show();
	
}
