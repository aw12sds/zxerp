<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jehc.xtmodules.xtmodel.XtKwords">
	<!--初始化分页-->
	<select id="getXtKwordsListByCondition" resultType="jehc.xtmodules.xtmodel.XtKwords" parameterType="map">
		SELECT
			xt_kwords.`xt_kwords_id`,
			xt_kwords.`xt_kwords_content`,
			DATE_FORMAT(xt_kwords.`xt_kwords_ctime`,'%Y-%m-%d %H:%i:%s') AS `xt_kwords_ctime`,
			DATE_FORMAT(xt_kwords.`xt_kwords_mtime`,'%Y-%m-%d %H:%i:%s') AS `xt_kwords_mtime`,
			xt_kwords.`xt_userinfo_id`,
			xt_kwords.`xt_kwords_status`,
			xt_userinfo.`xt_userinfo_realName`
		FROM 
			xt_kwords xt_kwords LEFT JOIN xt_userinfo xt_userinfo ON xt_kwords.xt_userinfo_id = xt_userinfo.xt_userinfo_id
		WHERE 1=1
		<if test="null != xt_kwords_content">
			AND xt_kwords.xt_kwords_content like '%${xt_kwords_content}%'
		</if>
	</select>

	<!--查询对象-->
	<select id="getXtKwordsById" resultType="jehc.xtmodules.xtmodel.XtKwords" parameterType="string">
		SELECT
			xt_kwords.`xt_kwords_id`,
			xt_kwords.`xt_kwords_content`,
			DATE_FORMAT(xt_kwords.`xt_kwords_ctime`,'%Y-%m-%d %H:%i:%s') AS `xt_kwords_ctime`,
			DATE_FORMAT(xt_kwords.`xt_kwords_mtime`,'%Y-%m-%d %H:%i:%s') AS `xt_kwords_mtime`,
			xt_kwords.`xt_userinfo_id`,
			xt_kwords.`xt_kwords_status`,
			xt_userinfo.`xt_userinfo_realName`
		FROM 
			xt_kwords xt_kwords LEFT JOIN xt_userinfo xt_userinfo ON xt_kwords.xt_userinfo_id = xt_userinfo.xt_userinfo_id
		WHERE xt_kwords.xt_kwords_id=#{xt_kwords_id}
	</select>

	<!--添加-->
	<insert id="addXtKwords" parameterType="jehc.xtmodules.xtmodel.XtKwords">
		INSERT INTO
			xt_kwords
			(
			`xt_kwords_id`,
			`xt_kwords_content`,
			`xt_kwords_ctime`,
			`xt_kwords_mtime`,
			`xt_userinfo_id`,
			`xt_kwords_status`
			)
			VALUES
			(
			#{xt_kwords_id},
			#{xt_kwords_content},
			#{xt_kwords_ctime},
			#{xt_kwords_mtime},
			#{xt_userinfo_id},
			#{xt_kwords_status}
			)
	</insert>

	<!--修改-->
	<update id="updateXtKwords" parameterType="jehc.xtmodules.xtmodel.XtKwords">
		UPDATE
			xt_kwords
		SET
			`xt_kwords_id` = #{xt_kwords_id},
			`xt_kwords_content` = #{xt_kwords_content},
			`xt_kwords_mtime` = #{xt_kwords_mtime},
			`xt_userinfo_id` = #{xt_userinfo_id},
			`xt_kwords_status` = #{xt_kwords_status}
		WHERE xt_kwords_id=#{xt_kwords_id}
	</update>

	<!--删除-->
	<delete id="delXtKwords" parameterType="map">
		DELETE FROM xt_kwords WHERE xt_kwords_id IN
		<foreach item="item" index="index" collection="xt_kwords_id" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<!--批量添加-->
	<insert id="addBatchXtKwords" parameterType="list">
		INSERT INTO
			xt_kwords
			(
			`xt_kwords_id`,
			`xt_kwords_content`,
			`xt_kwords_ctime`,
			`xt_kwords_mtime`,
			`xt_userinfo_id`,
			`xt_kwords_status`
			)
			VALUES
		<foreach collection="list" item="item" index="index" separator=",">
			(
			#{item.xt_kwords_id},
			#{item.xt_kwords_content},
			#{item.xt_kwords_ctime},
			#{item.xt_kwords_mtime},
			#{item.xt_userinfo_id},
			#{item.xt_kwords_status}
			)
		</foreach>
	</insert>

	<!--批量修改-->
	<update id="updateBatchXtKwords" parameterType="list">
		<foreach collection="list" item="item" index="index" open="" close="" separator=";">
			UPDATE
				xt_kwords
			SET
				`xt_kwords_id` = #{item.xt_kwords_id},
				`xt_kwords_content` = #{item.xt_kwords_content},
				`xt_kwords_mtime` = #{item.xt_kwords_mtime},
				`xt_userinfo_id` = #{item.xt_userinfo_id},
				`xt_kwords_status` = #{item.xt_kwords_status}
			WHERE xt_kwords_id=#{item.xt_kwords_id}
		</foreach>
	</update>
</mapper>