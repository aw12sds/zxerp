	<select id="getZxScheduleDayListByCondition" resultType="jehc.zxmodules.model.ZxScheduleDay" parameterType="map">
		SELECT
			`id`,
			`user_id`,
			`date`,
			`transaction_type`,
			DATE_FORMAT(`begin_time`,'%H:%i:%s') AS `begin_time`,
			DATE_FORMAT(`end_time`,'%H:%i:%s') AS `end_time`,
			`transaction_content`,
			`remark`,
			`transaction_remind`,
			`remind_day`,
			`remind_hour`,
			`remind_minute`,
			`period_transaction_id`
		FROM 
			zx_schedule_day
		WHERE 1=1 
		<if test="null != begin_date and '' != begin_date and null != end_date and '' != end_date">
			AND date BETWEEN #{begin_date} AND #{end_date}
		</if>
		<if test="null != user_id">
			AND user_id=#{user_id}
		</if>
		ORDER BY date DESC
	</select>
