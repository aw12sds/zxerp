<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jehc.solrmodules.solrmodel.SolrIndexSql">
	<!--初始化分页-->
	<select id="getSolrIndexSqlListByCondition" resultType="jehc.solrmodules.solrmodel.SolrIndexSql" parameterType="map">
		SELECT
			`solr_index_sql_id`,
			`solr_index_sql_query`,
			`solr_index_sql_type`,
			`solr_entity_id`,
			DATE_FORMAT(`solr_index_ctime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_ctime`,
			DATE_FORMAT(`solr_index_mtime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_mtime`,
			`xt_userinfo_id`
		FROM 
			solr_index_sql
		WHERE 1=1
		<if test="null != solr_entity_id">
			AND solr_entity_id = #{solr_entity_id}
		</if>
	</select>

	<!--查询对象-->
	<select id="getSolrIndexSqlById" resultType="jehc.solrmodules.solrmodel.SolrIndexSql" parameterType="string">
		SELECT
			`solr_index_sql_id`,
			`solr_index_sql_query`,
			`solr_index_sql_type`,
			`solr_entity_id`,
			DATE_FORMAT(`solr_index_ctime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_ctime`,
			DATE_FORMAT(`solr_index_mtime`,'%Y-%m-%d %H:%i:%s') AS `solr_index_mtime`,
			`xt_userinfo_id`
		FROM 
			solr_index_sql
		WHERE solr_index_sql_id=#{solr_index_sql_id}
	</select>

	<!--添加-->
	<insert id="addSolrIndexSql" parameterType="jehc.solrmodules.solrmodel.SolrIndexSql">
		INSERT INTO
			solr_index_sql
			(
			`solr_index_sql_id`,
			`solr_index_sql_query`,
			`solr_index_sql_type`,
			`solr_entity_id`,
			`solr_index_ctime`,
			`solr_index_mtime`,
			`xt_userinfo_id`
			)
			VALUES
			(
			#{solr_index_sql_id},
			#{solr_index_sql_query},
			#{solr_index_sql_type},
			#{solr_entity_id},
			#{solr_index_ctime},
			#{solr_index_mtime},
			#{xt_userinfo_id}
			)
	</insert>

	<!--修改-->
	<update id="updateSolrIndexSql" parameterType="jehc.solrmodules.solrmodel.SolrIndexSql">
		UPDATE
			solr_index_sql
		SET
			`solr_index_sql_id` = #{solr_index_sql_id},
			`solr_index_sql_query` = #{solr_index_sql_query},
			`solr_index_sql_type` = #{solr_index_sql_type},
			`solr_entity_id` = #{solr_entity_id},
			`solr_index_ctime` = #{solr_index_ctime},
			`solr_index_mtime` = #{solr_index_mtime},
			`xt_userinfo_id` = #{xt_userinfo_id}
		WHERE solr_index_sql_id=#{solr_index_sql_id}
	</update>

	<!--删除-->
	<delete id="delSolrIndexSql" parameterType="map">
		DELETE FROM solr_index_sql WHERE solr_index_sql_id IN
		<foreach item="item" index="index" collection="solr_index_sql_id" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>